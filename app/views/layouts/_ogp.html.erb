<%# Twitterカード %>
<% if controller.controller_name == 'resumes' && controller.action_name == 'show' %>

<meta name="twitter:card" content='summary_large_image' />
<meta name="twitter:site" content="<%= "@#{@resume.user.nickname}" %>" />
<meta property="og:url" content="<%= resume_url(@resume.id) %>" />
<meta property="og:title" content="<%= "#{@resume.user.name}のTWESUME ~Twitter履歴書~"%>" />
<meta property="og:description" content="<%= "#{@resume.user.name}が上記画像の条件で転職先を探しています。詳細はリンク先へ。"%>" />
<meta property="og:image" content="<%= resume_image_url(@resume) %>" />

<% else %>

<%# ここに個別ページ以外のOGP設定 %>
<meta name="twitter:card" content='summary' />
<meta property="og:url" content="<%= root_url %>" />
<meta property="og:title" content="TWESUME ~みんなのTwitter履歴書~" />
<meta property="og:description" content= "TWESUMEはTwitter転職を支援する逆求人サービスです。自己PRとポートフォリオでアピールしましょう。" />
<meta property="og:image" content="<%= asset_path "twesume-twcard.png" %>" />

<% end %>