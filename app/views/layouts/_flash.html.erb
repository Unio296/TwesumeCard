<% flash.each do |message_type, message| %>
  <% fa = {"info" => "info", "success" => "check", "warning" => "warning", "danger" => "exclamation-circle" } %>
  <div class="alert alert-<%= message_type %> alert-dismissible text-white fade show" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
    <%= fa_icon "#{fa[message_type]}", text: "#{message}" %>
  </div>
<% end %>