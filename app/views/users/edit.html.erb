

<div class="py-3">
  <div class="container">
    <h2 class="heading">ユーザ情報変更</h2>
      <div class="row">
        <div class="input-wrapper p-4 col-lg-5 mx-auto">

        <%= form_for @user,url: user_path(@user.nickname), html:{method: "patch"} do |f| %>
          <%= f.hidden_field :id %><%# ユーザの設定を変更する場合、idをキーにしてuserを検索する %>

          <%= f.label :name ,'ユーザ名'%>
          <%= f.text_field :name ,class: 'form-control'%>

          <%= f.label :nickname, 'ユーザID', class:"mt-3"  %>
          <%= f.text_field :nickname ,class:'form-control'%>

          <%= f.submit '更新', class: 'btn btn-primary my-3' %>
        <% end %>
    </div>
    </div>
  </div>
</div>