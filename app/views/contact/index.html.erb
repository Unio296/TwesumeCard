<div class="py-3 text-center">
  <div class="container">
    <div class="row">
      <div class="mx-auto p-4 col-lg-7">
        <h1 class="mb-4">Contact</h1>
        <%= form_for @contact, url: contact_confirm_path do |f| %>
          <% if @contact.errors.any? %>
            <div class="alert alert-danger" role="alert">
              <strong>入力内容にエラーがあります</strong>
              <ul>
                <% @contact.errors.each do |attr, msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= f.text_field :name, class: 'form-control mb-2', placeholder: 'Name' %>
          <%= f.text_field :email, class: 'form-control mb-2', placeholder: 'Email' %>
          <%= f.text_area :message, class: 'form-control mb-2', rows: '10', placeholder: 'Message' %>
          <%= recaptcha_tags %>

          <%= button_tag type:"submit", class: 'btn btn-primary mt-4 mb-3' do %>
            <%= fa_icon 'envelope', text: 'SEND' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

