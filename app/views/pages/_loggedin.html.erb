
<section id="create-section" class="create-section">
  <div class="py-5 text-center">
    <h2>TWESUME 作成</h2>
    <%= link_to '新規作成', new_user_resume_path(current_user.nickname) ,class:"btn btn-primary" %>
  </div>
</section>
<section id="view-section" class="view-section">
  <div class="py-5 bg-light text-center">
    <div class="container">
      <div class="row">
        <div class="mx-auto col-md-8 text-center">
          <h2>TWESUME 一覧</h2>
        </div>
      </div>
      <% if @resumes.empty? %>
        <p>作成したカードはありません</p>
        <%#= link_to 'カード新規作成', new_user_resume_path(current_user.nickname) ,class:"btn btn-primary" %>
      <% else %>
      <p class="mb-4">あなたが作成したカードの一覧です</p>
      <div class="row">
      <% @resumes.each do |resume| %>
        
      <div class="col-lg-6 p-3 mx-auto">
        <div class="card mb-4">
            
            <div class="card-body">
              
                <%= content_tag(:div, class:"tab-pane fade text-center active show", id:"card-image#{resume.id}", role:"tabpanel") do %>
                  <%= image_tag resume_image_url(resume), class:"card-img-top p-3", alt:"TWESUME Card Cap" %>
                  <%= link_to 'TWESUMEページ',resume_path(resume.slug), class:"btn btn-primary" %>
                <% end %>
                
            </div>
          </div>
          </div>
      <% end %>
      <% end %>
      </div>
    </div>
  </div>
  </section>
  <section id="product-create" class="product-create">
    <div class="py-5 text-center">
    <h2>ポートフォリオ投稿</h2>
    <%= link_to '新規投稿', new_user_product_path(current_user.nickname) ,class:"btn btn-primary" %>
  </div>
  </section>
  <section id="product-view" class="product-view">

  <div class="py-5 bg-light text-center">
    <div class="container">
      <div class="row">
        <div class="mx-auto col-md-8 text-center">
          <h2>ポートフォリオ一覧</h2>
          <p class="mb-4">あなたのポートフォリオ一覧です<br>こちらのポートフォリオがTWESUMEページの下部に表示されます</p>
        </div>
      </div>
      <% if @products.empty? %>
        <p>まだポートフォリオの投稿がありません</p>
      <% else %>
      
        <div class="row">
        <% @products.each do |product| %>
        
        <div class="col-lg-6 p-3 mx-auto">
          <div class="card mb-4">
          <h3><%= product.title %></h3>
          <%= image_tag product.image.url, class:"card-img-top p-3", alt:"TWESUME Card Cap" %>
            <div class="card-body">
            <p><%= product.description %></p>

            <%= link_to product.title+"を見る", product.url, class:"btn btn-info" , target:["_blank"]%>
            <%= link_to '編集' ,edit_product_path(product.slug), class:"btn btn-success" %>
            <%= link_to product_path(product.slug), method: :delete, 
                    data: {confirm: "このポートフォリオを削除します。よろしいですか？"}, class:"btn btn-danger" do%>
              <%= fa_icon 'trash', text:" 削除" %>
            <% end %>

            </div>
          </div>
        </div>
        <% end %>
        
      <% end %>
      </div>
    </div>
  </div>

  </section>